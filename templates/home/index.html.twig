{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container">
        <h3 class="mt-4 mb-5 text-center" style="font-weight: bold; color: #3498db;">Bienvenue aux Jeux Olympiques de Paris 2024</h3>
        <div class="row justify-content-center">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="{{ asset('images/product/' ~ product.id ~ '.png') }}" alt="{{ product.name }}" class="card-img-top" style="width: 100%; height: 200px; object-fit: cover; border-radius: 10px 10px 0 0;">
                        <div class="card-body">
                            <h5 class="card-title" style="font-weight: bold;">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description }}</p>
                            {# <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">En savoir plus</small>
                                <i class="fas fa-arrow-right" style="color: #3498db;"></i>
                            </div> #}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}